<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minWidth="300dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_top_info"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/plugin_checversion_dailog_top_bg"
            android:gravity="center"
            android:text="提示"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dialog_middle_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center"
            android:minHeight="100dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="消息提示"
            android:textColor="#FF808080"
            android:textSize="16sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#b0adad" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dialog_left_text"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/plugin_checversion_dailog_buttom_left_bg"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/plugin_check_version_dialog_top"
                android:textSize="16sp" />

            <TextView
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="#b0adad" />

            <TextView
                android:id="@+id/dialog_right_text"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/plugin_checversion_dailog_buttom_right_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/plugin_check_version_dialog_top"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>